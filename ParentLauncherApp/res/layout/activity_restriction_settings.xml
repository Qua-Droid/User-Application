<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button_restrictions"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back"
        android:tint="#000000" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Restrictions Settings"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp" />

    <!-- Category-based restrictions section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category Restrictions"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/checkbox_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch Category"
        android:textColor="#000000"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkbox_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Category"
        android:textColor="#000000"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkbox_draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw Category"
        android:textColor="#000000"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkbox_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Category"
        android:textColor="#000000"
        android:textSize="20sp" />

    <!-- App-specific restrictions section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App-Specific Restrictions"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/search_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search apps..."
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:background="@drawable/edit_text_background"
        android:textSize="20sp"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/apps_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/save_restrictions_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Restrictions"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:textColor="#000000"
        android:padding="16dp"/>
</LinearLayout>

