<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <!-- Sidebar: Back, Settings, Home, Menu -->
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#33FFFFFF"
        android:padding="8dp"
        android:layout_marginEnd="16dp">

        <View
            android:layout_width="57dp"
            android:layout_height="64dp"
            android:layout_weight="0.2" />

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back"
            android:tint="#000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="Settings"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_settings"
            android:tint="#000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="Home"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_home"
            android:tint="#000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Main Buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#CCFFFFFF">

            <Button
                android:id="@+id/create_child_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Create User"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:textColor="#000000"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#CCFFFFFF">

            <Button
                android:id="@+id/launch_child_app"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Launch Child App"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:textColor="#000000"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#CCFFFFFF">

            <Button
                android:id="@+id/manage_restrictions_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Manage Restrictions"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:textColor="#000000"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#CCFFFFFF">

            <Button
                android:id="@+id/list_users_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="List Users"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:textColor="#000000"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Car Image -->
    <ImageView
        android:id="@+id/car_image"
        android:layout_width="378dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="Car Image"
        android:scaleType="fitCenter"
        android:src="@drawable/carimageremovebgpreview" />
</LinearLayout>


